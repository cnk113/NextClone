params {
    // copy output out for all steps or not
    // See: https://www.nextflow.io/docs/latest/process.html
    publish_dir_mode = 'copy'

    // DNAseq or scRNAseq
    mode = "scRNAseq"
    params.mapping_process_profile = "regular_mapping"
    // generic
    publish_dir = "nextclone"
    clone_barcodes_reference = "/home/chang/bc_58.txt"
    barcode_edit_distance = 5
    n_chunks = 1
    barcode_length = 58

    // for clonmapper single cell data
    scrnaseq_bam_files = "."
    phred_thres = 30
    adapter_edit_distance = 3
    adapter_5prime = "CTGGGGCACAAGCGAATT"
    adapter_3prime = ""
}

conda {
    enabled = true
    useMamba = false
    useMicromamba = false
    createOptions = '--yes'
}

nextflow {
    enable.dsl = 2
}

// Profiles for the processes.
process { 

    executor = 'local'

    publishDir  = [
        mode: params.publish_dir_mode,
        path: params.publish_dir
    ]

    withLabel: small {
        cpus = 8
        memory = 16.GB
        time = 2.h
    }

    withLabel: regular_mapping {
        cpus = 16
        memory = 64.GB
        time = 48.h
        queue = 'regular'
    }

    withLabel: medium_mem {
        cpus = 16
        memory = 48.GB
        time = 24.h
    }

    withLabel: small_mem {
        cpus = 8
        memory = 24.GB
        time = 4.h
    }

}
